<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.gmail.vanyadubik.managerplus.fragment.WaybillFragment">

               <fragment android:id="@+id/map"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:name="com.google.android.gms.maps.SupportMapFragment"/>

                         <android.support.design.widget.FloatingActionButton
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          app:fabSize="mini"
                          app:srcCompat="@android:drawable/ic_menu_zoom"
                          android:id="@+id/zoom_up"
                          android:layout_marginEnd="14dp"
                          android:layout_marginBottom="68dp"
                          android:layout_alignParentBottom="true"
                          android:layout_alignParentEnd="true"/>

                          <android.support.design.widget.FloatingActionButton
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          app:fabSize="mini"
                          app:srcCompat="@android:drawable/ic_menu_zoom"
                          android:id="@+id/zoom_down"
                          android:layout_alignParentBottom="true"
                          android:layout_alignStart="@+id/zoom_up"
                          android:layout_marginBottom="12dp"/>

                          <android.support.design.widget.FloatingActionButton
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          app:fabSize="mini"
                          app:srcCompat="@android:drawable/ic_menu_compass"
                          android:layout_alignBottom="@+id/zoom_down"
                          android:layout_alignParentStart="true"
                          android:layout_marginStart="12dp"
                          android:id="@+id/current_position"/>

</RelativeLayout>