<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                tools:context="com.gmail.vanyadubik.managerplus.activity.GalleryActivity">


    <ImageView
        android:id="@+id/gallery_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/gallery_image_marging_bottom"
        android:layout_marginEnd="@dimen/gallery_image_marging"
        android:layout_marginStart="@dimen/gallery_image_marging"
        android:layout_marginTop="@dimen/gallery_image_marging"
        android:clickable="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gallery_imageView"
        android:layout_margin="@dimen/gallery_image_marging"
        android:foregroundGravity="center"
        android:padding="@dimen/gallery_text_view_padding"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/textsize_cap"/>

    <Gallery
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_margin="@dimen/gallery_image_marging"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/delete_added_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/marging_button_map"
        android:layout_marginTop="@dimen/marging_button_map"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_delete"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/insert_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/delete_added_photo"
        android:layout_below="@+id/delete_added_photo"
        android:layout_marginTop="@dimen/marging_button_map"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_three_point_white"/>

</RelativeLayout>