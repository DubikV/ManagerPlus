<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gallery_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@android:drawable/ic_menu_gallery"/>

    <ImageView
        android:id="@+id/gallery_open_image"
        android:layout_width="@dimen/gallery_open_image_width"
        android:layout_height="@dimen/gallery_open_image_width"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/gallery_image_marging"
        android:layout_marginTop="@dimen/gallery_image_marging"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_search"/>
</RelativeLayout>