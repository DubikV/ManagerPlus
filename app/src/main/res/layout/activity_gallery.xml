<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_activity"
                tools:context="com.gmail.vanyadubik.managerplus.activity.GalleryActivity">


    <ImageView
        android:id="@+id/gallery_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/gallery_image_marging_bottom"
        android:layout_marginEnd="@dimen/gallery_image_marging"
        android:layout_marginStart="@dimen/gallery_image_marging"
        android:layout_marginTop="@dimen/gallery_image_marging"/>

    <TextSwitcher
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gallery_imageView"
        android:layout_margin="@dimen/gallery_image_marging"
        android:padding="@dimen/gallery_text_view_padding"
        android:foregroundGravity="center"/>

    <Gallery
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_margin="@dimen/gallery_image_marging"/>

</RelativeLayout>