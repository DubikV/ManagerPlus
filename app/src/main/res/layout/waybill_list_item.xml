<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/waybilllist_image"
        android:layout_weight="2"
        android:background="@drawable/shape_body_left"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/waybilllist_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:textSize="@dimen/textsize_table_item"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:padding="@dimen/marging_waybill_cap"
        android:background="@drawable/shape_body_left"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_alignBottom="@+id/member_name"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimary">

        <TextView
            android:id="@+id/waybilllist_odometer_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:textSize="@dimen/textsize_table_item"
            android:gravity="center"
            android:padding="@dimen/marging_waybill_cap"
            android:background="@drawable/shape_body_left"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/waybilllist_odometer_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/textsize_table_item"
            android:gravity="center"
            android:padding="@dimen/marging_waybill_cap"
            android:background="@drawable/shape_body_left"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

    <TextView
        android:id="@+id/waybilllist_km"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:textSize="@dimen/textsize_table_item"
        android:gravity="center"
        android:padding="@dimen/marging_waybill_cap"
        android:background="@drawable/shape_body_right"
        android:textColor="@color/colorPrimary"/>

</LinearLayout>