<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_window_cap_rectangle"
                android:textColor="@color/tab_background"
                android:gravity="left|center_horizontal"
                android:textSize="@dimen/textsize_cap"
                android:layout_marginTop="@dimen/marging_waybill_cap"
                android:layout_marginRight="@dimen/marging_waybill_cap"
                android:layout_marginLeft="@dimen/marging_waybill_cap"
                android:padding="@dimen/pading_edittext_waybill_cap"
                android:layout_weight="1"
                android:id="@+id/fuellist_cap" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_window_body"
            android:layout_marginRight="@dimen/marging_waybill_cap"
            android:layout_marginLeft="@dimen/marging_waybill_cap"
            android:layout_marginBottom="@dimen/marging_waybill_cap"
            android:id="@+id/fuellist_listview">
        </ListView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        android:id="@+id/fuel_del_bt"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="@dimen/marging_button_map"
        android:layout_above="@+id/fuel_search_bt"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_delete" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_plus"
        android:id="@+id/fuel_add_bt"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/fuel_del_bt"
        android:layout_alignStart="@+id/fuel_del_bt" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_open"
        android:id="@+id/fuel_search_bt"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="@dimen/marging_button_map"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/fuel_del_bt" />

</RelativeLayout>